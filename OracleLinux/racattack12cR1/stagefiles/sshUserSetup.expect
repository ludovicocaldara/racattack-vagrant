#!/usr/bin/expect -f
set timeout 120

set user [lindex $argv 0]
set pass [lindex $argv 1]

set server [lrange $argv 2 end]

spawn /media/sf_12cR1/grid/sshsetup/sshUserSetup.sh -user $user -hosts "$server" -noPromptPassphrase -advanced

expect "Do you want to continue and let the script make the above mentioned changes (yes/no)?" {
    send "yes\n"
  }

expect {
  "password:" {
    send "$pass\n"
    exp_continue
  }
  "SSH verification complete."{
  } 
}

send_user "finished\n"
